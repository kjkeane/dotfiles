syntax enable

" plugins
filetype plugin indent on

" show invisible characters
set list

" show numbers
set number

" YAML config
set tabstop=2
set softtabstop=0
set expandtab
set shiftwidth=2
set smarttab

" search as you type
set incsearch

" ignore case
set ignorecase
" unless containing uppercase
set smartcase
" highlight search
set hlsearch

" show incomplete command in lower right
set showcmd
